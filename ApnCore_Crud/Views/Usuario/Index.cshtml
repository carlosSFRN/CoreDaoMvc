@model IEnumerable<ApnCore_Crud.Models.Usuario>
@{
    ViewData["Title"] = "Index";
}
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Usuario</a>
</p>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NomeUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cpf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IdUsuario)
                </td> 
                <td>
                    @Html.DisplayFor(modelItem => item.NomeUsuario)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cpf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="btn btn-outline-secondary"><span data-feather="edit"></span></a>
                    <a asp-controller="UsuarioEstabelecimento" asp-action="Index" asp-route-id="@item.IdUsuario" class="btn btn-outline-secondary"><span data-feather="plus"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>
